<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:TweetOBoxMain.CustomControls"
    xmlns:local="clr-namespace:TweetOBoxMain"
	xmlns:usercontrol="clr-namespace:TweetOBoxMain.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    xmlns:TweetOBoxMain_Utility="clr-namespace:TweetOBoxMain.Utility" xmlns:TOBUtility="clr-namespace:TOB.Utility" x:Name="userAccountInfo" x:Class="TweetOBoxMain.UserControls.AccountInfo"
    Height="Auto" Width="Auto" >
  

  <UserControl.Resources>  	
    <TweetOBoxMain_Utility:ColorConverter x:Key="ColorConverter"/>
    <TweetOBoxMain_Utility:PanelNamesConverter x:Key="PanelNamesConverter"/>
    <TweetOBoxMain_Utility:StreamNamesConverter x:Key="StreamNamesConverter"/>
    
    <DataTemplate x:Key="AccountListDataTemplate">
      <Border>
        <Grid Width="320">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.343*"/>
            <ColumnDefinition Width="0.332*"/>
            <ColumnDefinition Width="0.325*"/>
          </Grid.ColumnDefinitions>
          <TextBlock Text="{Binding UserName}" HorizontalAlignment="Left" Foreground="#FF777777" FontSize="11.5" Margin="7,0,0,0" VerticalAlignment="Center" />
          <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="btnFollowres" HorizontalAlignment="Left" Content="{Binding FollowersCount}" Margin="10,5,3,0" Style="{DynamicResource FollwerButtonStyle}" Width="Auto" Cursor="Hand" Click="btnFollowres_Click" DataContext="{Binding Mode=OneWay}" FontWeight="Bold" ToolTip="Followers"/>
            <Image Source="/Images/Ic_follow.png" Grid.Column="2" Width="18" Margin="2,0,0,0"/>
          </StackPanel>
          <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="btnFollowing" HorizontalAlignment="Left" Margin="10,5,3,0" Style="{DynamicResource FriendsFollowingButtonStyle}" VerticalAlignment="Top" Width="Auto"  Content="{Binding FriendsCount}" Click="btnFollowing_Click" DataContext="{Binding Mode=OneWay}" Cursor="Hand" ToolTip="Following"/>
            <Image Source="/Images/Ic_follower.png" Grid.Column="3" Width="18" Margin="0" HorizontalAlignment="Left"/>
          </StackPanel>

        </Grid>
      </Border>
    </DataTemplate>

    <DataTemplate x:Key="FollowersPopupDataTemplate">
      <Border CornerRadius="4" Margin="0" Width="325" BorderThickness="1" BorderBrush="#FFBBBCBC" Background="White">
        <StackPanel Width="325" >
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="0.221*"/>
              <ColumnDefinition Width="0.779*"/>
            </Grid.ColumnDefinitions>
            <Border Margin="0,7,5,5" Width="45" Height="45" BorderBrush="#FF819497" BorderThickness="1" VerticalAlignment="Top">
              <!--<Border.BitmapEffect>
                <OuterGlowBitmapEffect GlowColor="#FFc2c2c2" GlowSize="3" Opacity="0.5" />
              </Border.BitmapEffect>-->
              <Image Source="{Binding ProfileImageUrl}" VerticalAlignment="Top"/>
            </Border>
            <Grid Grid.Column="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.50*"/>
                <ColumnDefinition Width="0.50*"/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="0.49*"/>
                <RowDefinition Height="0.561*"/>
              </Grid.RowDefinitions>
              <TextBlock TextWrapping="Wrap" Text="{Binding Name}" FontFamily="Tahoma" VerticalAlignment="Center" Foreground="#FF494949" FontWeight="Bold" FontSize="12" />
              <Border Grid.Column="1" >
                <Grid >
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="43.588"/>
                    <ColumnDefinition Width="19"/>
                    <ColumnDefinition Width="Auto" MinWidth="34" />
                    <ColumnDefinition/>
                  </Grid.ColumnDefinitions>
                  <Button x:Name="btnFollowres" HorizontalAlignment="Right" Content="{Binding FollowersCount}" Margin="0,5,1,0" Style="{DynamicResource FollwerButtonStyle}" Width="Auto" DataContext="{Binding Mode=OneWay}" FontWeight="Bold"/>
                  <Image Source="/Images/Ic_follow.png" Width="Auto"  HorizontalAlignment="Right" Height="23" Grid.Column="1"/>
                  <TextBlock Text="{Binding FriendsCount}" Margin="5,5,1,0" HorizontalAlignment="Right" Width="Auto" VerticalAlignment="Top" Foreground="#FF0C5C04" FontSize="11.5" FontFamily="Tahoma" FontWeight="Bold" Grid.Column="2"/>
                  <Image Source="/Images/Ic_follower.png" Width="Auto" Margin="0,0,5,0" HorizontalAlignment="Right" Grid.Column="3" Height="22"/>
                </Grid>
              </Border>
              <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                <WrapPanel  Margin="0,0,3,0" >
                  <TextBlock Text="{Binding Description}" Foreground="#FF494949" FontSize="11.3" HorizontalAlignment="Left" Margin="-2,0,0,0" VerticalAlignment="Top" TextWrapping="Wrap"/>
                </WrapPanel>
                <Button Margin="0,2,0,5" Content="view profile in work-area" FontFamily="Tahoma" Grid.Column="2" Grid.Row="2" Cursor="Hand" Padding="1" FontSize="11" Foreground="#FF3D77C6" BorderThickness="1" VerticalAlignment="Bottom">
                  <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                      <TextBlock TextDecorations="None"><InlineUIContainer>
                          <ContentPresenter />
                        </InlineUIContainer></TextBlock>
                    </ControlTemplate>
                  </Button.Template>
                  <Button.Style>
                    <Style TargetType="{x:Type Button}">
                      <Setter Property="Foreground" Value="#FF0F3F92" />
                      <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                          <Setter Property="Foreground" Value="#FF0F3F92" />
                        </Trigger>
                      </Style.Triggers>
                    </Style>
                  </Button.Style>
                </Button>
              </StackPanel>
            </Grid>
          </Grid>
        </StackPanel>
      </Border>
    </DataTemplate>

    <Style x:Key="SavedFilterListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
      <Setter Property="Background" Value="{x:Null}"/>
      <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
      <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
      <Setter Property="Padding" Value="2,0,0,0"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type ListBoxItem}">                   
            		<Border x:Name="border" Margin="6,5,0,0" Width="150" Height="20" Background="#FFCBCBCB" CornerRadius="3">                      
          		<Grid Height="34">
          			<Grid.ColumnDefinitions>
          				<ColumnDefinition Width="*"/>
          				<ColumnDefinition Width="20"/>
          			</Grid.ColumnDefinitions>            			
            		<!--<custom:UnSelectableToggle Name="tog" Content="{Binding FilterText, Converter={StaticResource PanelNamesConverter}}" IsChecked="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsSelected}" Style="{DynamicResource FilterToggleButtonStyle}" Margin="0,0,0,2" Command="{Binding CommandFilter, Mode=Default}" CommandParameter="{Binding}" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" FontSize="11" FontFamily="Tahoma" Grid.Column="0" d:LayoutOverrides="GridBox" Width="135" VerticalAlignment="Top" Background="#02FFFFFF" BorderBrush="{x:Null}" />-->
          			<ToggleButton x:Name="toggleButton" Content="{Binding FilterText, Converter={StaticResource PanelNamesConverter}}" IsChecked="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsSelected}" Style="{DynamicResource FilterToggleButtonStyle}" Margin="0,0,0,2" Command="{Binding CommandFilter, Mode=Default}" CommandParameter="{Binding}" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" FontSize="11" FontFamily="Tahoma" Grid.Column="0" d:LayoutOverrides="GridBox" Width="135" VerticalAlignment="Top" Background="#02FFFFFF" BorderBrush="{x:Null}" Click="toggleButton_Click" /> 
          			<Border x:Name="border1" HorizontalAlignment="Stretch" Margin="0,0,3,2" VerticalAlignment="Top" Width="Auto" Height="20" Grid.Column="1" d:LayoutOverrides="GridBox" Background="{x:Null}" CornerRadius="0,3,3,0">
          				<Button x:Name="btnFilterDelete" Content="{Binding Id}"  Template="{DynamicResource DeleteButtonControlTemplate}" ToolTip="Delete Filter" Command="{Binding CommandDeleteFilter, Mode=Default}" CommandParameter="{Binding}" Margin="0,1,0,0"/>
          			</Border>
          		</Grid>            	
          	</Border>            
            <ControlTemplate.Triggers>
              <Trigger Property="IsSelected" Value="true">
              	<Setter Property="Background" TargetName="border" Value="#FF29000B"/>
              	<Setter Property="Margin" TargetName="border1" Value="-1,0,3,2"/>
              	<Setter Property="Foreground" TargetName="toggleButton" Value="White"/>
              </Trigger>
              <Trigger Property="IsSelected" Value="False"/>
              <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style x:Key="SavedSearchtDataTemplate" TargetType="{x:Type ListBoxItem}">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
      <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
      <Setter Property="Padding" Value="2,0,0,0"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type ListBoxItem}">
            <Border x:Name="Bd"  Width="150" CornerRadius="2" VerticalAlignment="Top" Margin="0,5,0,0" HorizontalAlignment="Left" Height="20" BorderBrush="{x:Null}" Background="#FFCBCBCB">
              <Grid Margin="0">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="0.841*"/>                
                  <ColumnDefinition Width="0.159*"/>
                </Grid.ColumnDefinitions>                
                <ToggleButton x:Name="toggleButtonSearch" Content="{Binding SearchText, Converter={StaticResource PanelNamesConverter}}" Style="{DynamicResource SearchToggleButtonStyle}" Width="Auto" IsChecked="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsSelected}" Margin="0"  Command="{Binding CommandSearch}" CommandParameter="{Binding}" FontSize="11" FontFamily="Tahoma" Grid.ColumnSpan="1" Grid.Column="0" Click="toggleButton_Click"  />
                <Border x:Name="border" HorizontalAlignment="Stretch" Margin="-3,0,0,0" VerticalAlignment="Bottom" Width="22" Height="20" Grid.Column="2" Background="#FFCBCBCB" CornerRadius="0,3,3,0">
                	<Button x:Name="btnSearchDelete" Content="{Binding Id}"  Template="{DynamicResource DeleteButtonControlTemplate}" ToolTip="Delete Search" Command="{Binding CommandSearchDelete}" CommandParameter="{Binding}"/>
                </Border>
              </Grid>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsSelected" Value="true">
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                <Setter Property="Background" TargetName="Bd" Value="#FF2B020D"/>
                <Setter Property="Width" TargetName="Bd" Value="150"/>
                <Setter Property="Height" TargetName="Bd" Value="20"/>
                <Setter Property="Background" TargetName="border" Value="{x:Null}"/>
                <Setter Property="Foreground" TargetName="toggleButtonSearch" Value="White"/>
              </Trigger>
              <MultiTrigger>
                <MultiTrigger.Conditions>
                  <Condition Property="IsSelected" Value="true"/>
                  <Condition Property="Selector.IsSelectionActive" Value="false"/>
                </MultiTrigger.Conditions>
                <!--<Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>-->
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
              </MultiTrigger>
              <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    
    <Style x:Key="AccountComboBoxItemStyle" TargetType="{x:Type ComboBoxItem}">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type ComboBoxItem}">
            <Grid>
              <TextBlock Text="{Binding Username}" />
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style x:Key="GroupFollowingListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
      <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
      <Setter Property="Padding" Value="2,0,0,0"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type ListBoxItem}">
            <Border x:Name="Bd" SnapsToDevicePixels="true" Padding="{TemplateBinding Padding}" Width="160" Height="90" Background="WhiteSmoke" BorderBrush="#FFDFDFDF" BorderThickness="1" CornerRadius="5" Margin="3">
              <Grid Margin="4,1,0,0">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="0.388*"/>
                  <ColumnDefinition Width="0.612*"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                  <Border Margin="0,5,12.045,5" Width="45" Height="45" BorderBrush="#FF819497" BorderThickness="1" HorizontalAlignment="Left">
                    <Image Source="{Binding ProfileImageUrl}" VerticalAlignment="Top"/>
                  </Border>

                </StackPanel>
                <StackPanel Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="0,0,0,5">
                  <TextBlock  Text="{Binding Name}" VerticalAlignment="Bottom" Foreground="#FF3C3C3C" FontWeight="Bold" FontFamily="Tahoma" FontSize="12"/>
                  <TextBlock  Text="{Binding ScreenName}" VerticalAlignment="Bottom" FontFamily="Tahoma" FontSize="12" Foreground="#FF555555"/>
                </StackPanel>
                <Button x:Name="btnAddToGroup" Grid.Column="1" Height="25" Content="Add" Width="80" Style="{DynamicResource AddtoGroupButtonStyle}" Cursor="Hand" Click="btnAddToGroup_Click" DataContext="{Binding Mode=OneWay}" VerticalAlignment="Top" Margin="0,5,0,0"/>
              </Grid>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsSelected" Value="true">
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                <Setter Property="Background" TargetName="Bd" Value="{x:Null}"/>
                <Setter Property="Cursor" TargetName="Bd" Value="None"/>
              </Trigger>
              <MultiTrigger>
                <MultiTrigger.Conditions>
                  <Condition Property="IsSelected" Value="true"/>
                  <Condition Property="Selector.IsSelectionActive" Value="false"/>
                </MultiTrigger.Conditions>
                <!--<Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>-->
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
              </MultiTrigger>
              <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style x:Key="GroupMembersListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
      <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
      <Setter Property="Padding" Value="2,0,0,0"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type ListBoxItem}">
            <Border x:Name="Bd" SnapsToDevicePixels="true" Padding="{TemplateBinding Padding}" Width="160" Height="90" CornerRadius="5" BorderThickness="1" BorderBrush="#FFDFDFDF" Margin="3">
              <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                  <GradientStop Color="WhiteSmoke" Offset="0"/>
                  <GradientStop Color="WhiteSmoke" Offset="1"/>
                </LinearGradientBrush>
              </Border.Background>
              <Grid Margin="5,1,0,0" VerticalAlignment="Top" Height="90      ">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="0.379*"/>
                  <ColumnDefinition Width="0.621*"/>
                </Grid.ColumnDefinitions>
                <Border Margin="0,5,12.045,5" Width="45" Height="45" BorderBrush="#FF819497" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                  <Image Source="{Binding ProfileImageUrl}" VerticalAlignment="Top"/>
                </Border>
                <StackPanel Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="0,0,0,5">
                  <TextBlock  Text="{Binding Name}" VerticalAlignment="Bottom" Foreground="#FF3C3C3C" FontWeight="Bold" FontFamily="Tahoma" FontSize="12"/>
                  <TextBlock  Text="{Binding ScreenName}" VerticalAlignment="Bottom" FontFamily="Tahoma" FontSize="12" Foreground="#FF555555"/>
                </StackPanel>
                <Button x:Name="btnRemoveFromGroup" Grid.Column="1" Height="25" Content="Remove" Width="90" Style="{DynamicResource AddtoGroupButtonStyle}" Cursor="Hand" DataContext="{Binding Mode=OneWay}" Click="btnRemoveFromGroup_Click" VerticalAlignment="Top" Margin="0,5,0,0"/>
              </Grid>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsSelected" Value="true">
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
              </Trigger>
              <MultiTrigger>
                <MultiTrigger.Conditions>
                  <Condition Property="IsSelected" Value="true"/>
                  <Condition Property="Selector.IsSelectionActive" Value="false"/>
                </MultiTrigger.Conditions>
                <!--<Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>-->
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
              </MultiTrigger>
              <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    
    <ControlTemplate x:Key="FilterFollowingTemplate" TargetType="{x:Type TextBox}">
      <Border x:Name="border" BorderThickness="1" Background="#FFFFFF" BorderBrush="#FF93999B" Height="19">
        <Grid>
          <ScrollViewer x:Name="PART_ContentHost" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
          <TextBlock x:Name="textBlock" Margin="0" Opacity="1" Text="Filter following " FontFamily="Tahoma" FontSize="9.333" Foreground="#FF899C9F"  TextWrapping="Wrap" Visibility="Hidden" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="3" FontStyle="Italic"  />
          <Button x:Name="btnFilterFollowing" HorizontalAlignment="Right" Margin="5,1,3,0" Style="{DynamicResource FilterTextButtonStyle}" Width="10" Height="11" Content="" ToolTip="Clear Filter" Click="btnFilterFollowing_Click" />
        </Grid>
      </Border>
      <ControlTemplate.Triggers>
        <Trigger Property="Text" Value="">
          <Setter Property="Style" TargetName="btnFilterFollowing" Value="{DynamicResource CloseFilterButtonStyle}"/>
        </Trigger>
        <MultiTrigger>
          <MultiTrigger.Conditions>
            <Condition Property="IsFocused" Value="False" />
            <Condition Property="Text"	 Value=""/>
          </MultiTrigger.Conditions>
          <Setter Property="Visibility" TargetName="textBlock" Value="Visible" />
        </MultiTrigger>
        <Trigger Property="IsFocused" Value="True"/>
      </ControlTemplate.Triggers>
    </ControlTemplate>
    
    <Style x:Key="GroupItemsListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
      <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
      <Setter Property="Padding" Value="2,0,0,0"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type ListBoxItem}">
            <Border x:Name="Bd" Width="155" Height="20" Background="{x:Null}" Margin="0,0,0,4">
                <Grid Margin="5,0,0,0">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.72*"/>
                    <ColumnDefinition Width="0.28*"/>
                  </Grid.ColumnDefinitions>
                  <ToggleButton x:Name="toggleButtonList" Content="{Binding FullName}" IsChecked="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsSelected}" Style="{DynamicResource TwitterListToggleButtonStyle}" Margin="0,0,0,2" Command="{Binding CommandGroups, Mode=Default}" CommandParameter="{Binding}" Grid.ColumnSpan="1" HorizontalAlignment="Left" FontSize="11" FontFamily="Tahoma" Grid.Column="0" Width="135" />
                <!--  <Button Margin="0" x:Name="btnGpNames" Style="{DynamicResource ListToggleButtonStyle}" Content="{Binding FullName}" VerticalAlignment="Top" Grid.ColumnSpan="1" Command="{Binding CommandGroups}" CommandParameter="{Binding}"/> -->
                  <Border Grid.Column="1" Background="#FFCBCBCB" CornerRadius="0,3,3,0">
                  	<StackPanel Orientation="Horizontal" Margin="3,0,0,0">
                  		<Button x:Name="btnEditGroup" Margin="0,0,0,1" Style="{DynamicResource GroupEditButtonStyle}" Width="13" Height="11" Content="" ToolTip="Edit" DataContext="{Binding Mode=OneWay}" Click="btnEditGroup_Click"/>
                  		<Button x:Name="btnGroupDelete" Grid.Column="1" Content="{Binding Id}"  VerticalAlignment="Bottom" Height="15"  Template="{DynamicResource DeleteButtonControlTemplate}" Width="15" HorizontalAlignment="Left" Margin="5,0,2,3" ToolTip="Delete Group" Command="{Binding CommandDeleteGroups}" CommandParameter="{Binding}"/>
                  	</StackPanel>
                  </Border>
                </Grid>
              </Border>            
            <ControlTemplate.Triggers>           
           <!--   <Trigger Property="IsSelected" Value="true">
                <Setter TargetName="borderGroups" Property="Background"
                          Value="#FF220700"/>
                <Setter TargetName="btnGpNames" Property="Background"
                         Value="#FF220700"/>
                <Setter TargetName="btnGpNames" Property="Foreground"
                         Value="#FFFFFFFF"/>
              </Trigger> -->
              <MultiTrigger>
                <MultiTrigger.Conditions>
                  <Condition Property="IsSelected" Value="true"/>
                  <Condition Property="Selector.IsSelectionActive" Value="false"/>
                </MultiTrigger.Conditions>
                <!--<Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>-->
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                <Setter Property="Background" TargetName="Bd" Value="#FFC92525"/>
              </MultiTrigger>
              <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    
    <Style x:Key="GroupPopupListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
