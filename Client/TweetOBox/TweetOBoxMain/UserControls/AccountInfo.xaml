    <Popup x:Name="PopupGroups"
                        StaysOpen="False"
                        Placement="Center"
                        PopupAnimation="Scroll"
                        AllowsTransparency = "True" HorizontalOffset="3" VerticalOffset="-21" >
      <Border BorderThickness="1" Background="#59000000" BorderBrush="#FF6F6F6F">
        <Border BorderBrush="#FF060505" Background="White" Margin="5">
          <Grid  >
            <Grid.RowDefinitions>
              <RowDefinition Height="0.103*"/>
              <RowDefinition Height="0.897*"/>
              <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <StackPanel>
              <TextBlock Text="List" FontSize="16" FontWeight="Bold" Foreground="#FF333333" Margin="10,0,0,0" />
