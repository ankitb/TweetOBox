                      <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FFE2E2E2" Offset="1"/>
                      </LinearGradientBrush>
                    </Border.Background>
