    <!--Plugin Popup-->
    <Popup x:Name="PluginPopup" StaysOpen="False"
                          Placement="Center"
                          PopupAnimation="Scroll"
                          AllowsTransparency = "True" HorizontalOffset="3" VerticalOffset="-21" >
      <Border Width="400" BorderThickness="1,1,1,1" BorderBrush="White" CornerRadius="3" Background="#66000000">
        <Border Margin="5" CornerRadius="3" Background="White">
          <Grid VerticalAlignment="Top" >
            <Grid.RowDefinitions>
              <RowDefinition Height="0.224*"/>
              <RowDefinition Height="0.163*"/>
              <RowDefinition Height="0.17*"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="0.17*"/>
              <RowDefinition Height="0.274*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="New Plugin" FontWeight="Bold" FontFamily="Tahoma" FontSize="13.333" Margin="8,8,285,0" Foreground="#FF414141"></TextBlock>
              <Button x:Name="btnPluginClose" Margin="0,8,0,0" Style="{DynamicResource PlgincloseButtonStyle}" Content="X" Click="btnPluginClose_Click"/>

            </StackPanel>
            <Path Fill="White" Stretch="Fill" Stroke="#FFEAEAEB" Margin="8,34.066,0,0" VerticalAlignment="Top" Height="5" Data="M11.5,82.897994 L318.01468,82.897994" HorizontalAlignment="Left" Width="375"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5,0,0,0">
              <TextBlock Text="Select Stream" FontFamily="Tahoma" FontSize="11" Margin="5,3,30,0"></TextBlock>
              <ComboBox x:Name="cmbPluginStream" Width="150" Height="25" VerticalAlignment="Top" ItemContainerStyle="{DynamicResource PluginStreamComboBoxItemStyle}" DisplayMemberPath="DisplayName" ItemsSource="{Binding}"></ComboBox>
            </StackPanel>
            <ListBox Grid.Row="3"  Name="listBoxPlugin" ItemContainerStyle="{DynamicResource PluginListBoxItemStyle}" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0">
              <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                  <UniformGrid></UniformGrid>
                </ItemsPanelTemplate>
              </ListBox.ItemsPanel>
            </ListBox>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5,0,0,0">
              <TextBlock Text="Select Plugin" FontFamily="Tahoma" FontSize="11" Margin="5,3,35,0"></TextBlock>
              <ComboBox x:Name="cmbPlugins" Width="150" Height="25" Visibility="Collapsed" VerticalAlignment="Top">
                <ComboBoxItem Content="PicturePriview"></ComboBoxItem>
                <ComboBoxItem Content="WebPriview"></ComboBoxItem>
              </ComboBox>

            </StackPanel>
            <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,10">
              <Button x:Name="btnPluginSave" Content="Save" Margin="0,0,5,0" Template="{DynamicResource ButtonControlTemplateNormal}" Click="btnPluginSave_Click"></Button>
              <Button x:Name="btnPluginCancel" Content="Cancel" Template="{DynamicResource ButtonControlTemplateNormal}" Click="btnPluginCancel_Click"></Button>
            </StackPanel>
          </Grid>
        </Border>
      </Border>
    </Popup>

