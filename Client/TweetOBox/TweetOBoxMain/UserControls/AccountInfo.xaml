            <Border BorderThickness="1" Grid.Column="0" Grid.Row="1"  VerticalAlignment="Top" Margin="0,0,10,0" Padding="2">
              <ListBox x:Name="listboxGroupsPopup" ItemsSource="{Binding}"  VerticalAlignment="Bottom" Grid.ColumnSpan="2" SelectionMode="Multiple" Background="{x:Null}" BorderThickness="0" BorderBrush="{x:Null}" SelectedIndex="0" FontFamily="Tahoma" FontSize="10.667" Foreground="#FF464646" Margin="10,0,0,0" HorizontalAlignment="Left" ItemContainerStyle="{DynamicResource GroupPopupListBoxItemStyle}" />
