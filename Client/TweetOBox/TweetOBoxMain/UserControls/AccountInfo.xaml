                  <Button x:Name="btnAddUser" Grid.Column="1" Margin="0,0,-90,0" Width="80" Content="Add" Click="btnAddUser_Click" Style="{DynamicResource AddtoGroupButtonStyle}" Cursor="Hand"/>
