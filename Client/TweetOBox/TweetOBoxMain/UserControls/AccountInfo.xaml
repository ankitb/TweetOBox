                <TabControl Grid.ColumnSpan="2" Grid.Row="2" Margin="7,5,0,0" Height="270" Width="529.5" VerticalAlignment="Top" Style="{DynamicResource TabControlStyle}" HorizontalAlignment="Left">
                  <TabItem Header="Following" Focusable="True" Style="{DynamicResource GroupsTabItemStyle}" Foreground="#FFC1C1C1" BorderThickness="0" Height="30" Width="100" VerticalAlignment="Bottom" Margin="-2,-2,-2,-4" Cursor="Hand" >
                    <Grid>
                      <Grid.RowDefinitions>
                        <RowDefinition Height="0.105*"/>
                        <RowDefinition Height="0.895*"/>
                      </Grid.RowDefinitions>
                      <TextBox x:Name="txtFollowingFilter" Width="200" HorizontalAlignment="Left" Margin="5,-5,0,5" TextChanged="txtFollowingFilter_TextChanged" Height="25" Template="{DynamicResource FilterFollowingTemplate}"/>
                      <ListBox x:Name="listGroupsFollowing" Grid.Row="1" ItemsSource="{Binding}" ItemContainerStyle="{DynamicResource GroupFollowingListBoxItemStyle}" Grid.RowSpan="2" Margin="0,-5,0,0" BorderThickness="0" BorderBrush="{x:Null}" Background="{x:Null}">
                        <ListBox.ItemsPanel>
                          <ItemsPanelTemplate>
                            <WrapPanel Width="500" />
                          </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                      </ListBox>
                    </Grid>
                  </TabItem>
                  <TabItem Header="List Members" Style="{DynamicResource GroupsTabItemStyle}" Foreground="#FFC1C1C1" VerticalAlignment="Bottom" Height="30" Margin="0,0,-2,-4" Cursor="Hand">
                    <ListBox x:Name="listGroupMembers"  ItemsSource="{Binding}" ItemContainerStyle="{DynamicResource GroupMembersListBoxItemStyle}" BorderThickness="0" BorderBrush="{x:Null}" Background="{x:Null}">
                      <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                          <WrapPanel Width="500"/>
                        </ItemsPanelTemplate>
                      </ListBox.ItemsPanel>
                    </ListBox>
                  </TabItem>

                </TabControl>
              </Grid>
            </Border>



            <StackPanel Orientation="Horizontal" Margin="0,0,15,-13" Grid.Row="3" HorizontalAlignment="Right" Grid.Column="1" VerticalAlignment="Bottom" >
              <!--	<Button Style="{DynamicResource SavegpButtonStyle}" Width="81" Height="27" Click="btnGroupSave_Click"/> -->
              <Button x:Name="btnGroupSave" Width="70" Height="25" Margin="30,0,0,0" Content="Save" Click="btnGroupSave_Click" VerticalAlignment="Top" Template="{DynamicResource ButtonControlTemplateNormal}"/>
              <Button x:Name="btnGroupCancel" Width="70" Height="25"  Content="Cancel" Margin="5,0,0,0" Click="btnGroupCancel_Click" VerticalAlignment="Top" Template="{DynamicResource ButtonControlTemplateNormal}"/>
            </StackPanel>
          </Grid>
        </Border>
      </Border>
    </Popup>

