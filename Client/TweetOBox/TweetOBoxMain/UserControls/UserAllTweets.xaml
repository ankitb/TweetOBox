                <RowDefinition Height="0.18*"/>
              </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.203*"/>
                <ColumnDefinition Width="0.663*"/>
                <ColumnDefinition Width="0.134*"/>
              </Grid.ColumnDefinitions>
