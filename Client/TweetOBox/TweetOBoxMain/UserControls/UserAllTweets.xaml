                  </InlineUIContainer><Run Text=" "/><Run Text=" "/><Run Text=" "/><TweetOBoxMain_Utility:BindableRun BoundText="{Binding Text}"  Foreground="#FF494949" FontSize="11.3"/></TextBlock>
                <TweetOBoxMain_Utility:TweetsTextBlock TextWrapping="Wrap" InlineCollection="{Binding Converter={StaticResource TagsLinkConverter}}"/>
              </WrapPanel>

              <Button x:Name="btnDismissUIObj" ToolTip="Dismiss Message"  Visibility="Hidden" IsEnabled="False" HorizontalAlignment="Right" Grid.Column="2" Command="local:TOBCommands.DismissUIObject" CommandParameter="{Binding}" Template="{DynamicResource DeleteButtonControlTemplate}" VerticalAlignment="Top" Cursor="Hand" Content="X"/>

                            <Grid  Grid.ColumnSpan="3" Grid.Row="1" Margin="5,0,0,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,8,0,0">
                  <TextBlock x:Name="textBlock" FontFamily="Tahoma" FontSize="10" Foreground="#FF7A8C58" Margin="0,0,0,0" ><Hyperlink x:Name="hlinkStatus" RequestNavigate="HandleLinkClick" NavigateUri="{Binding Converter={StaticResource TwitterStatusUrl}, Mode=OneWay}" TargetName="_top" FontFamily="Tahoma" FontSize="10" TextDecorations="None" ><InlineUIContainer>
                        <TextBlock x:Name="tbDate" Text="{Binding Converter={StaticResource DateConverter}, Mode=OneWay}" Foreground="#FF7a8c58" />
